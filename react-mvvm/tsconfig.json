{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es6", "dom", "esnext"],
    "baseUrl": "./",
    "paths": {
    },
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}